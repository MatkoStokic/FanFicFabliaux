@{ ViewData["Title"] = "WriteBook"; }
<div class="container my-5">
    <form class="row g-3">
        <div class="col-md-4">
            <label for="inputNaslov" class="form-label">Title:</label>
            <input type="text" class="form-control" id="inputTitle" required>
        </div>
        <div class="col-12 my-2">
            <label for="inputOznake" class="form-label">Hashtag:</label>
            <input type="text" class="form-control" id="inputHashtag" placeholder="#oznaka" required>
        </div>
        <div class="col-12 my-2">
            <label for="inputZanr" class="form-label">Choose genre:</label>
            <select id="inputZanr" class="form-select" required>
                <option selected disabled>Choose...</option>
                <option>Drama</option>
                <option>Horor</option>
                <option>Akcija</option>
                <option>Komedija</option>
            </select>
        </div>
        <div class="col-12 my-3">
            <label for="inputTextarea" class="form-label">Write</label>
            <textarea class="form-control" id="inputTextarea" rows="20" required></textarea>
        </div>
        <div class="col-12 my-3">
            <button type="submit" class="btn btn-secondary">Save</button>
        </div>
    </form>
    <div class="row">
        <p>Or upload book from your device</p>

    </div>
    <button type="submit" class="btn btn-secondary">Upload book</button>

</div>
